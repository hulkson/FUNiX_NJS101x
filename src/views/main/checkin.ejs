<main>
    <!-- checkin -->
    <div tabindex="-1">
      <div class="modal-dialog modal-lg">
        <div class="modal-content align-items-center">
          <h4 class="mt-4">BẢNG ĐIỂM DANH</h4>

          <div class="mt-4 text-center">
            <h6>THÔNG TIN ĐIỂM DANH</h6>
            <p>Họ và tên: Nguyễn Văn A</p>
            <p class="work-status-btn">Trạng thái: Chưa điểm danh</p>
          </div>

          <!-- workplace selector -->
          <div class="col-8">
            <label for="workplace" class="form-label">Nơi làm việc:</label>
            <form class="input-group mb-3" method="POST">
              <select class="form-select" name="workplace" id="workplace">
                <option value="Công Ty">Công ty</option>
                <option value="Khách hàng">Khách hàng</option>
                <option value="Nhà">Nhà</option>
              </select>
              <button type="submit" class="btn btn-primary">Điểm danh</button>
            </form>
          </div>
        </div>
      </div>
    </div>
</main>

