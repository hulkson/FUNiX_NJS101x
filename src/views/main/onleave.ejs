<%- include('../layout/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
<title>Funix-ASM1</title>
</head>
<!--------------------------------------- -->

<body>
<!-- include navbar -->
<%- include('../layout/navbar.ejs') %>
<!-- ------------------------------------- -->
<main>
    <!-- modal-onleave -->
    <div>
      <div class="modal-dialog modal-lg">
        <div class="modal-content align-items-center">
          <h4 class="mt-4">BẢNG XIN NGHỈ PHÉP</h4>

          <div class="mt-4 text-center">
            <h6>THÔNG TIN</h6>
            <p>Họ và tên: Nguyễn Văn A</p>
            <p>Ngày phép còn lại: 5 ngày</p>
          </div>
          <!-- onleave-time -->
          <div class="col-8">
            <div class="row justify-content-center">
              <div class="mt-3 col-lg-6">
                  <label for="startDate">Chọn Ngày:</label>
                  <input id="startDate" class="form-control" type="date" />
                  <span id="startDateSelected"></span>
              </div>
              <div class="mt-3 col-lg-6">
                <label for="startDate">Chọn Giờ:</label>
                <select class="form-select col-lg-6" id="onleave-time">
                  <option value="1" selected>1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                  <option value="6">6</option>
                  <option value="7">7</option>
                  <option value="8">8</option>
                </select>
              </div>
          </div>
          </div>

          <!-- onleave reason -->
          <div class="col-8">
            <label for="onleave-reason" class="form-label">Lý do:</label>
            <textarea class="form-control" id="onleave-reason" rows="8"></textarea>
          </div>
          
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#modal-onleave-success">Đăng Ký</button>
          </div>
        </div>
      </div>
    </div>

    <!-- modal-onleave-success -->
    <div class="modal fade" id="modal-onleave-success" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">ĐĂNG KÝ THÀNH CÔNG</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="mt-4 text-center">
              <h6>THÔNG TIN ĐĂNG KÝ</h6>
              <p>Họ và tên: Nguyễn Văn A</p>
              <p>Ngày nghỉ: 1/1/2022</p>
              <p>Thời gian nghỉ: 8:00</p>
              <p>Phép năm còn lại: 5 ngày</p>
              <p>Lý do:...................</p>
              <p class="work-status-btn">Trạng thái: Đang làm việc</p>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
          </div>
        </div>
      </div>
    </div>
</main>

<!-- ------------------------------------- -->
<%- include('../layout/end.ejs') %>
</body>